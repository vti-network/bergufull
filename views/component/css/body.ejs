<style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            background: linear-gradient(to bottom, #87CEFA, #00BFFF); /* gradasi langit cerah */
            color: black;
        }
        .content {
            padding: 60px 20px 20px;
            text-align: center;
        }

/* tableDashboard.css */
.tconntainer {
    margin: 5px;
}

#transactionTable {
    width: 100%;
    border-collapse: collapse;
}

#transactionTable th, #transactionTable td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    font-size: 12px;
}

#transactionTable th {
    background-color: #333;
    color: #fff;
}

/* bal */
#balanceTable {
    width: 100%;
    border-collapse: collapse;
}

#balanceTable th, #balanceTable td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    font-size: 10px;
}

#balanceTable th {
    background-color: #333;
    color: #fff;
}

/* u */
#u {
    width: 100%;
    border-collapse: collapse;
}

#u th, #u td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
    font-size: 10px;
    border-collapse: collapse;
}

#u th {
    background-color: #333;
    color: #fff;
}

/* login resgister */


.login-container {
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

.form {
    display: flex;
    flex-direction: column;
    /* max-width: 300px; */
}

.form-group {
    margin-bottom: 15px;
}


#email,
#otp,
#pin {
    width: 90%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    margin-top: 10px;
}

#otp_b {
    background-color: #333;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.tombol {
    margin-top: 20px;
}

.navbari {
    font-size: 14px;
}

.navbari a {
    color: #333;
    text-decoration: none;
    margin: 0 10px;
}

/* Styles for modal */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
    background-color: #fefefe;
    margin: 15% auto;
    padding: 5px;
    border: 1px solid #888;
    width: 300px;
}

.close {
    color: #aaa;
    float: right;
    font-size: 28px;
    font-weight: bold;
}

.close:hover,
.close:focus {
    color: black;
    text-decoration: none;
    cursor: pointer;
}


/* card */
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40px;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

/* colapse */

.collapsible {
  background-color: #777;
  color: white;
  cursor: pointer;
  padding: 18px;
  width: 100%;
  border: none;
  text-align: left;
  outline: none;
  font-size: 15px;
}

.active, .collapsible:hover {
  background-color: #555;
}

.contentuser {
  padding: 0 18px;
  display: none;
  overflow: hidden;
  background-color: #f1f1f1;
}

/* tabs */
.tabs {
            display: flex;
            background-color: #333;
            color: #fff;
        }

        .tab-button {
            flex: 1;
            padding: 10px;
            cursor: pointer;
            border: none;
            background-color: #333;
            color: #fff;
            outline: none;
        }

        .tab-content {
            display: none;
            padding: 20px;
            background-color: #fff;
        }

        .active {
            display: block;
        }
</style>